<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:WpfApp.UserControls"
        xmlns:cc="clr-namespace:WpfApp.CustomControls"
        xmlns:vm="clr-namespace:WpfApp.ViewModels"
        xmlns:v="clr-namespace:WpfApp.Views"
        Title="Polysoft - Add new invoice" Height="700" Width="600" x:Name="window">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10 5"/>
                <Setter Property="Margin" Value="50 10"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
                <Setter Property="Margin" Value="10 5"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!--<Window.DataContext>
        <vm:InvoiceViewModel/>
    </Window.DataContext>-->

    <v:InvoiceView/>
</Window>
