<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="495" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="321*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="groupBox1" Header="Prvý riadok" Margin="0,0,0,379" Grid.ColumnSpan="2">
            <Grid>
                <TextBox x:Name="yearTextBox" HorizontalAlignment="Left" Margin="10,36,0,0" Text="2021" TextWrapping="Wrap" VerticalAlignment="Top" Width="51"/>
                <Label x:Name="yearLabel" Content="Rok" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

                <Label x:Name="invoiceNumLabel" Content="Čislo faktury" HorizontalAlignment="Left" Margin="69,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="invoiceNumTextBox" HorizontalAlignment="Left" Margin="69,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

                <Label x:Name="customerLabel" Content="Názov odberateľa" HorizontalAlignment="Left" Margin="217,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="customerTextBox" HorizontalAlignment="Left" Margin="217,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" TextChanged="customerTextBox_TextChanged"/>

                <Button x:Name="button1" Content="Vyplniť" HorizontalAlignment="Left" Margin="499,36,0,0" VerticalAlignment="Top" Click="button1_Click" Width="62"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="groupBox2" Header="Vložiť nového odberateľa" Margin="0,105,0,190" Grid.ColumnSpan="2">
            <Grid>
                <Label x:Name="customerNumLabel" Content="Čislo odberateľa" HorizontalAlignment="Left" Margin="12,17,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="customerNumTextBox" HorizontalAlignment="Left" Margin="12,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

                <Label x:Name="customerNameLabel" Content="Názov odberaťeľa" HorizontalAlignment="Left" Margin="144,16,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="customerNameTextBox" HorizontalAlignment="Left" Margin="144,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>

                <Label x:Name="icoLabel" Content="IČO" HorizontalAlignment="Left" Margin="12,81,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="icoTextBox" HorizontalAlignment="Left" Margin="12,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

                <Label x:Name="dicLabel" Content="DIČ" HorizontalAlignment="Left" Margin="144,81,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="dicTextBox" HorizontalAlignment="Left" Margin="144,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="dicTextBox_TextChanged"/>

                <Button x:Name="button2" Content="Vyplniť" HorizontalAlignment="Left" Margin="498,74,0,0" VerticalAlignment="Top" Click="button2_Click" Width="62"/>

                <Label Content="IČ DPH" HorizontalAlignment="Left" Margin="274,81,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="icDphTextBox" HorizontalAlignment="Left" Margin="274,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

                <Label x:Name="stateLabel" Content="Štát" HorizontalAlignment="Left" Margin="274,12,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="stateComboBox" HorizontalAlignment="Left" Margin="274,39,0,0" VerticalAlignment="Top" Width="157" IsEditable="True">
                    <ComboBoxItem Content="Slovenská republika" IsSelected="True"/>
                    <ComboBoxItem Content="Česká republika"/>
                    <ComboBoxItem Content="Maďarsko"/>
                    <ComboBoxItem Content="Poľsko"/>
                    <ComboBoxItem Content="Rakúsko"/>
                    <ComboBoxItem Content="USA"/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="groupBox3" Header="Vyplniť zvyšok formulára" Margin="0,305,0,10" Grid.ColumnSpan="2">
            <Grid>
                <Label x:Name="amountLabel" Content="Faktúrované eurá" HorizontalAlignment="Left" Margin="12,17,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="amountTextBox" HorizontalAlignment="Left" Margin="12,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

                <Label x:Name="dateLabel" Content="Dátum dodania/platby" HorizontalAlignment="Left" Margin="144,16,0,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="date1Picker" HorizontalAlignment="Left" Margin="144,40,0,0" VerticalAlignment="Top" DisplayDate="2021-04-15" Width="130" FirstDayOfWeek="Monday" SelectedDateChanged="date1Picker_SelectedDateChanged"/>

                <Label Content="Datum splatnosti" HorizontalAlignment="Left" Margin="292,13,0,0" VerticalAlignment="Top"/>
                <DatePicker x:Name="date2Picker" HorizontalAlignment="Left" Margin="292,39,0,0" VerticalAlignment="Top" Width="130" FirstDayOfWeek="Monday"/>

                <Button x:Name="button3" Content="Vyplniť" HorizontalAlignment="Left" Margin="496,0,0,0" VerticalAlignment="Center" Click="button3_Click" Width="62"/>
                <CheckBox x:Name="dateCheckBox" Content="Rovnaký ako dodania" HorizontalAlignment="Left" Margin="292,68,0,0" VerticalAlignment="Top" Checked="dateCheckBox_Checked" Unchecked="dateCheckBox_Unchecked"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
